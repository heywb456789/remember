<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org"
      th:replace="~{mobile/layout/default :: html(
        ~{::title},
        ~{::section},
        ~{::customCSS},
        ~{::customJS},
        'main',
        'dashboard'
      )}">
<head>
  <title>메인 - 토마토리멤버</title>

  <!-- Custom CSS -->
  <customCSS>
    <link th:href="@{/assets/mobile/css/main.css}" rel="stylesheet">
  </customCSS>
</head>
<body>
<section>
  <div class="container">
    <!-- 환영 메시지 -->
    <div class="welcome-message">
      <div class="welcome-text">'토마토리멤버'에 오신 것을 환영합니다.</div>
      <div class="welcome-subtitle">소중한 분과의 영원한 추억을 만들어보세요.</div>
    </div>

    <!-- 로그인 전 - 디지털 추모 공간 카드 -->
    <div class="logged-out-only" th:if="${!isLoggedIn}">
      <div class="memorial-intro-card">
        <div class="memorial-intro-icon">
          <i class="fas fa-heart"></i>
        </div>
        <div class="memorial-intro-title">디지털 추모 공간</div>
        <div class="memorial-intro-subtitle">
          블록체인 기술로 안전하게 보관되는<br>
          영원한 추모 공간을 만들어보세요.
        </div>
        <button class="new-memorial-btn" onclick="showLoginModal()">
          <i class="fas fa-plus"></i>
          새 메모리얼 등록하기
        </button>
      </div>

      <!-- 서비스 안내 -->
      <div class="service-intro">
        <div class="service-title">
          <i class="fas fa-shield-alt"></i>
          안전하고 투명한 서비스
        </div>
<!--        <div class="service-item">-->
<!--          <div class="service-icon">-->
<!--            <i class="fas fa-check"></i>-->
<!--          </div>-->
<!--          <div class="service-content">-->
<!--            <h4>블록체인 보안 시스템</h4>-->
<!--            <p>투명하고 공정한 서비스 이용</p>-->
<!--          </div>-->
<!--        </div>-->
      </div>

      <!-- 추가 서비스 카드들 -->
      <div class="additional-services">
        <!-- 블록체인 토큰 시스템 -->
        <div class="service-card">
          <div class="service-card-header">
            <div class="service-card-icon blockchain">
              <i class="fas fa-coins"></i>
            </div>
            <h4 class="service-card-title">블록체인 토큰 시스템</h4>
          </div>
          <p class="service-card-description">투명하고 공정한 서비스 이용</p>
        </div>

        <!-- 영구 보관 -->
        <div class="service-card">
          <div class="service-card-header">
            <div class="service-card-icon storage">
              <i class="fas fa-archive"></i>
            </div>
            <h4 class="service-card-title">영구 보관</h4>
          </div>
          <p class="service-card-description">소중한 추억을 영원히 안전하게 보관</p>
        </div>

        <!-- 가족 공유 -->
        <div class="service-card">
          <div class="service-card-header">
            <div class="service-card-icon family">
              <i class="fas fa-users"></i>
            </div>
            <h4 class="service-card-title">가족 공유</h4>
          </div>
          <p class="service-card-description">가족 구성원과 함께 추억 공유</p>
        </div>
      </div>

      <!-- 3개월 무료체험 시작하기 -->
      <div class="free-trial-section">
        <button class="free-trial-btn">
          <i class="fas fa-play"></i>
          3개월 무료체험 시작하기
        </button>
      </div>

      <!-- 약관 및 푸터 영역 -->
      <div class="terms-footer-section">
        <div class="terms-links">
          <a href="/mobile/terms/service" class="terms-link">
            <i class="fas fa-file-alt"></i>
            이용약관
          </a>
          <a href="/mobile/terms/privacy" class="terms-link">
            <i class="fas fa-shield-alt"></i>
            개인정보처리방침
          </a>
          <a href="/mobile/support/contact" class="terms-link">
            <i class="fas fa-phone"></i>
            고객지원
          </a>
        </div>

        <div class="footer-info">
          <div class="company-info">
            서울특별시 마포구 양화진 4길 32 이토마토빌딩 2층<br>
            사업자등록번호 123-45-67890 | 대표 김토마토
          </div>
          <div class="contact-info">
            전화번호: 02-2128-3838 | 이메일: tomatoai@etomato.com
          </div>
          <div class="copyright">
            COPYRIGHT © 2025 TOMATOREMEMBER. ALL RIGHTS RESERVED.
          </div>
        </div>
      </div>
    </div>

    <!-- 로그인 후 - 메모리얼 관리 -->
    <div class="logged-in-only" th:if="${isLoggedIn}">
      <!-- 새 메모리얼 등록 버튼 -->
      <div class="add-memorial-section">
        <button class="add-memorial-btn">
          <i class="fas fa-user-plus"></i>
          새 메모리얼 등록하기
        </button>
      </div>

      <!-- 등록된 메모리얼이 있는 경우 -->
      <div class="memorial-list-section" th:if="${memorialCount > 0}">
        <div class="memorial-list-title">등록된 메모리얼</div>
        <div id="memorialList">
          <!-- 메모리얼 카드 템플릿 -->
          <div class="memorial-card" th:each="memorial, iterStat : ${memorialList}" th:data-memorial-id="${memorial.id}">
            <div class="memorial-header">
              <div class="memorial-avatar">
                <img th:src="${memorial.profileImageUrl ?: '/assets/mobile/images/default-avatar.png'}"
                     th:alt="${memorial.name}" class="avatar-img">
                <div class="memorial-status"
                     th:classappend="${memorial.isOnline ? 'online' : 'offline'}"></div>
              </div>
              <div class="memorial-info">
                <div class="memorial-name" th:text="${memorial.name}">김순자</div>
                <div class="memorial-relationship" th:text="${memorial.relationship?.displayName ?: '관계 없음'}">할머니</div>
                <div class="memorial-last-visit">
                  마지막 방문:
                  <span th:text="${memorial.lastVisitDate != null ? #temporals.format(memorial.lastVisitDate, 'yyyy-MM-dd') : '방문 기록 없음'}">
                    2025-06-15
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- 검색 기능 추가 (필요시) -->
<!--          <div class="search-section" th:if="${isLoggedIn and memorialCount > 0}">-->
<!--            <input type="text" id="memorialSearch" placeholder="메모리얼 검색..." -->
<!--                   class="search-input" onkeyup="searchMemorials(this.value)">-->
<!--          </div>-->
        </div>
      </div>

      <!-- 등록된 메모리얼이 없는 경우 -->
      <div class="empty-state" th:if="${memorialCount == 0}">
        <h3>등록된 메모리얼이 없습니다.</h3>
        <p>소중한 분과의 영원한 추억을 만들어보세요.</p>
        <button class="btn empty-state-create-btn">
          <i class="fas fa-plus"></i>
          새 메모리얼 등록하기
        </button>
      </div>

      <!-- 하단 액션 버튼 -->
      <div class="bottom-actions">
        <button class="action-btn btn-video">
          <i class="fas fa-video"></i>
          영상통화
        </button>
        <button class="action-btn btn-gift">
          <i class="fas fa-gift"></i>
          선물하기
        </button>
      </div>
    </div>

    <!-- 로딩 스켈레톤 (JavaScript로 동적 생성) -->
    <div class="loading-skeleton" id="loadingSkeleton" style="display: none;">
      <div class="skeleton-card">
        <div class="skeleton-avatar"></div>
        <div class="skeleton-content">
          <div class="skeleton-line"></div>
          <div class="skeleton-line short"></div>
        </div>
      </div>
      <div class="skeleton-card">
        <div class="skeleton-avatar"></div>
        <div class="skeleton-content">
          <div class="skeleton-line"></div>
          <div class="skeleton-line short"></div>
        </div>
      </div>
      <div class="skeleton-card">
        <div class="skeleton-avatar"></div>
        <div class="skeleton-content">
          <div class="skeleton-line"></div>
          <div class="skeleton-line short"></div>
        </div>
      </div>
    </div>

    <!-- 에러 상태 (JavaScript로 동적 생성) -->
    <div class="error-state" id="errorState" style="display: none;">
      <div class="error-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h4>오류가 발생했습니다</h4>
      <p id="errorMessage">메모리얼 목록을 불러오는 중 오류가 발생했습니다.</p>
      <button class="btn">
        <i class="fas fa-refresh"></i>
        다시 시도
      </button>
    </div>
  </div>

  <!-- 잔액 부족 모달 (동적 생성) -->
  <div class="modal fade" id="insufficientBalanceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">잔액이 부족합니다</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <div class="modal-icon mb-3">
            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
          </div>
          <div class="balance-info">
            <div class="balance-item mb-2">
              <span>현재 잔액: </span>
              <strong id="currentBalance">0원</strong>
            </div>
            <div class="balance-item">
              <span>필요 금액: </span>
              <strong id="requiredAmount">0원</strong>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/mobile/payment/charge" class="btn btn-primary">
            <i class="fas fa-credit-card"></i>
            토큰 충전하기
          </a>
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            나중에 충전
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- 체험 제한 모달 -->
  <div class="modal fade" id="trialLimitModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">무료체험 제한</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <div class="modal-icon mb-3">
            <i class="fas fa-info-circle text-primary" style="font-size: 3rem;"></i>
          </div>
          <h4>무료체험 제한</h4>
          <p class="mb-4">무료체험에서는 최대 <span id="maxMemorials">3</span>개의 메모리얼만 등록할 수 있습니다.</p>
          <div class="trial-upgrade-info mb-4">
            <div class="upgrade-item mb-2">
              <i class="fas fa-check text-success me-2"></i>
              <span>무제한 메모리얼 등록</span>
            </div>
            <div class="upgrade-item mb-2">
              <i class="fas fa-check text-success me-2"></i>
              <span>고급 AI 기능 이용</span>
            </div>
            <div class="upgrade-item">
              <i class="fas fa-check text-success me-2"></i>
              <span>가족 공유 기능</span>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/mobile/payment/upgrade" class="btn btn-primary me-2">
            <i class="fas fa-crown"></i>
            프리미엄 업그레이드
          </a>
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            나중에 업그레이드
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Custom JavaScript -->
<customJS>
  <script th:src="@{/assets/mobile/js/main.js}" type="module"></script>

  <!-- 서버 사이드 데이터 전달 -->
  <script th:inline="javascript">
    // 서버에서 전달받은 데이터
    window.serverData = {
      isLoggedIn: /*[[${isLoggedIn}]]*/ false,
      memorialCount: /*[[${memorialCount}]]*/ 0,
      memorialList: /*[[${memorialList}]]*/ [],
      showTrialBanner: /*[[${showTrialBanner}]]*/ false,
      trialDaysRemaining: /*[[${trialDaysRemaining}]]*/ 0,
      freeTrialMonths: /*[[${freeTrialMonths}]]*/ 3,
      maxFamilyMembers: /*[[${maxFamilyMembers}]]*/ 8,
      currentUser: /*[[${currentUser}]]*/ null,
      urls: {
        login: /*[[${loginUrl}]]*/ '/mobile/login',
        register: /*[[${registerUrl}]]*/ '/mobile/register',
        memorialCreate: /*[[${memorialCreateUrl}]]*/ '/mobile/memorial/create',
        payment: /*[[${paymentUrl}]]*/ '/mobile/payment'
      }
    };

    // 전역 함수들
    window.globalFunctions = {
      // 로그인 모달 표시
      showLoginModal: function() {
        alert('이 기능을 사용하려면\\n먼저 로그인해 주세요.');
        setTimeout(() => {
          window.location.href = window.serverData.urls.login;
        }, 1000);
      },

      // 메모리얼 생성 처리
      handleCreateMemorial: function() {
        console.log('📝 메모리얼 생성 요청');

        if (!window.serverData.isLoggedIn) {
          this.showLoginModal();
          return;
        }

        // 메모리얼 생성 페이지로 이동
        window.location.href = window.serverData.urls.memorialCreate;
      },

      // 영상통화 표시
      showVideoCall: function() {
        if (window.serverData.memorialCount === 0) {
          alert('먼저 메모리얼을 등록해주세요.');
          return;
        }
        alert('영상통화 기능 준비 중입니다.');
      },

      // 선물하기 표시
      showGiftInfo: function() {
        alert('선물하기 기능 준비 중입니다.');
      },

      // 메모리얼 목록 새로고침
      refreshMemorialList: function() {
        if (window.mainPageManager && window.mainPageManager.loadMemorialList) {
          window.mainPageManager.loadMemorialList();
        } else {
          window.location.reload();
        }
      },

      // 잔액 부족 모달 표시
      showInsufficientBalanceModal: function(balance, required) {
        const modal = document.getElementById('insufficientBalanceModal');
        const currentBalance = document.getElementById('currentBalance');
        const requiredAmount = document.getElementById('requiredAmount');

        if (currentBalance) {
          currentBalance.textContent = (balance || 0).toLocaleString() + '원';
        }
        if (requiredAmount) {
          requiredAmount.textContent = (required || 0).toLocaleString() + '원';
        }

        if (typeof bootstrap !== 'undefined' && modal) {
          const bsModal = new bootstrap.Modal(modal);
          bsModal.show();
        }
      },

      // 체험 제한 모달 표시
      showTrialLimitModal: function(maxMemorials) {
        const modal = document.getElementById('trialLimitModal');
        const maxMemorialsSpan = document.getElementById('maxMemorials');

        if (maxMemorialsSpan) {
          maxMemorialsSpan.textContent = maxMemorials || 3;
        }

        if (typeof bootstrap !== 'undefined' && modal) {
          const bsModal = new bootstrap.Modal(modal);
          bsModal.show();
        }
      }
    };

    // 전역 함수 바인딩 (하위 호환성)
    window.showLoginModal = window.globalFunctions.showLoginModal;
    window.handleCreateMemorial = window.globalFunctions.handleCreateMemorial;
    window.showVideoCall = window.globalFunctions.showVideoCall;
    window.showGiftInfo = window.globalFunctions.showGiftInfo;
    window.refreshMemorialList = window.globalFunctions.refreshMemorialList;

    // 페이지 초기화 함수
    window.pageInitializer = function() {
      console.log('🏠 메인 페이지 초기화');
      console.log('📊 서버 데이터:', window.serverData);

      // 메모리얼 카드 클릭 이벤트 바인딩
      document.querySelectorAll('.memorial-card').forEach(card => {
        card.addEventListener('click', function() {
          const memorialId = this.dataset.memorialId;
          if (memorialId) {
            console.log('📱 메모리얼 카드 클릭:', memorialId);
            // TODO: 메모리얼 상세 페이지로 이동
            alert('메모리얼 상세 페이지로 이동합니다.');
          }
        });
      });

      // 애니메이션 효과
      const animatedElements = document.querySelectorAll('.memorial-card, .memorial-intro-card, .service-intro');
      animatedElements.forEach((element, index) => {
        element.style.animationDelay = `${index * 0.1}s`;
      });
    };

    // 페이지 새로고침 함수
    window.pageRefresher = function() {
      console.log('🔄 메인 페이지 새로고침');

      if (window.serverData.isLoggedIn && window.mainPageManager) {
        if (typeof window.mainPageManager.refreshMemorialStatus === 'function') {
          window.mainPageManager.refreshMemorialStatus();
        }
      }
    };

    // 디버그 정보 (개발 모드에서만)
    if (window.debugMode) {
      console.log('🔧 메인 페이지 디버그 정보:');
      console.log('  서버 데이터:', window.serverData);
      console.log('  전역 함수:', window.globalFunctions);

      // 디버그 함수 등록
      window.debugMainPage = function() {
        console.group('🔍 메인 페이지 디버그');
        console.log('서버 데이터:', window.serverData);
        console.log('로그인 상태:', window.serverData.isLoggedIn);
        console.log('메모리얼 개수:', window.serverData.memorialCount);
        console.log('메모리얼 목록:', window.serverData.memorialList);
        console.log('체험 배너 표시:', window.serverData.showTrialBanner);
        console.log('현재 사용자:', window.serverData.currentUser);
        console.groupEnd();
      };
    }
  </script>
</customJS>
</body>
</html>